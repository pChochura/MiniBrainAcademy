<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Background"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackgroundBorderless">

    <android.support.v7.widget.CardView
        android:id="@+id/cardGame"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="37dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.shamanland.fonticon.FontIconView
                android:id="@+id/iconGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/colorText4"
                android:textSize="50sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/cardGame"
        android:layout_alignRight="@id/cardGame"
        android:layout_below="@id/cardGame"
        android:layout_marginTop="5dp"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorText1"/>

</RelativeLayout>